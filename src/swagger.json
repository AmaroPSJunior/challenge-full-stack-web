      "email": "arcamos.j@gmail.com" 
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "ra": {
                    "type": "number"
                  },
                  "cpf": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "user name sample",
                  "email": "sample@email.com",
                  "ra": 123456789,
                  "cpf": "00000000000"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "User already exists"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List users",
        "description": "List all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "ra": {
                        "type": "number"
                      },
                      "cpf": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "name": "user name sample",
                    "email": "sample@email.com",
                    "ra": 123456789,
                    "cpf": "00000000000"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}